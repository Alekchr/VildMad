<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#90b06d" >
    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:entries="@array/array_name"
        android:theme="@style/spinnerTheme"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#F3F3F3"
        >
    <Spinner
        android:id="@+id/spinner_kind"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:theme="@style/spinnerTheme2"/>
    </RelativeLayout>
    <CheckBox
        android:id="@+id/mPublicCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Del Offentligt"
        android:textColor="#90b06d"
        android:buttonTint="#90b06d"/>

    <EditText
        android:id="@+id/mEditTextNote"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        android:background="#F3F3F3"/>


</LinearLayout>