<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="#90B06D" >
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:entries="@array/planttypes"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="#F3F3F3"
        >
        <Spinner
            android:id="@+id/spinner_kind"
            android:layout_width="fill_parent"
            android:layout_height="40dp"/>
    </RelativeLayout>
    <CheckBox
        android:id="@+id/mPublicCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del Offentligt"
        android:textColor="#000000"
        android:buttonTint="#90b06d"/>
    <Button
        android:id="@+id/addPictureButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tilføj billede" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <EditText
        android:id="@+id/mEditTextNote"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        android:background="#F3F3F3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/addMarkerBtn"
        android:background="@drawable/dobuttons"
        android:layout_width="fill_parent"
        android:layout_marginRight="2dp"
        android:layout_height="37dp"
        android:layout_weight=".50"
        android:textColor="#FFFFFF"
        android:text="Tilføj Punkt"/>
    <Button
        android:id="@+id/closeAddMarkerBtn"
        android:background="@drawable/backbuttons"
        android:layout_marginLeft="2dp"
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:layout_weight=".50"
        android:text="Tilbage"/>
    </LinearLayout>


</LinearLayout>