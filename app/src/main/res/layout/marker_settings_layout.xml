    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <CheckBox
        android:id="@+id/show_public_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vis andres fund"
        android:textColor="#000000"
        android:buttonTint="#90b06d"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/saveSettingsBtn"
            android:background="@drawable/dobuttons"
            android:layout_width="fill_parent"
            android:layout_marginRight="2dp"
            android:layout_height="37dp"
            android:layout_weight=".50"
            android:textColor="#FFFFFF"
            android:text="Gem Ã¦ndringer" />
        <Button
            android:id="@+id/closeSettingsBtn"
            android:background="@drawable/backbuttons"
            android:layout_marginLeft="2dp"
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:layout_weight=".50"
            android:text="Tilbage" />
    </LinearLayout>
